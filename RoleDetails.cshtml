@model cngfapco.Models.Role
@{
    ViewBag.Title = "Role: " + Html.DisplayFor(model => model.RoleDescription);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
        $(":input[type='submit']").button();
    });
</script>

<!-- BEGIN PAGE HEADER-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN THEME CUSTOMIZER-->
        <div id="theme-change" class="hidden-phone">
            <i class="icon-cogs"></i>
            <span class="settings">
                <span class="text">Theme:</span>
                <span class="colors">
                    <span class="color-default" data-style="default"></span>
                    <span class="color-gray" data-style="gray"></span>
                    <span class="color-purple" data-style="purple"></span>
                    <span class="color-navy-blue" data-style="navy-blue"></span>
                </span>
            </span>
        </div>
        <!-- END THEME CUSTOMIZER-->
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
            </li>
            <li>
                <a href="/Users/RoleIndex"> نقش ها </a> <span class="divider">&nbsp;</span>
            </li>
            <li><a href="#">جزئیات نقش </a><span class="divider-last">&nbsp;</span></li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="row-fluid">
    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>جزئیات نقش</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    <fieldset>
                            <table style='width: 100%'>
                                <tr>
                                    <td style='width: 120px;font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.RoleName)
                                    </td>
                                    <td class='userTable'>
                                        @Html.DisplayFor(model => model.RoleName, new { style = "width:350px" })
                                        @Html.ValidationMessageFor(model => model.RoleName)
                                    </td>
                                </tr>
                                <tr>
                                    <td style='font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.RoleDescription)
                                    </td>
                                    <td class='userTable'>
                                        @Html.DisplayFor(model => model.RoleDescription, new { style = "width:90%" })
                                        @Html.ValidationMessageFor(model => model.RoleDescription)
                                    </td>
                                </tr>

                                <tr>
                                    <td style='width: 100px; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.IsSysAdmin, "System Role")
                                    </td>
                                    <td class='userTable'>
                                        @Html.DisplayFor(model => model.IsSysAdmin)
                                        @Html.ValidationMessageFor(model => model.IsSysAdmin)
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <input class="btn btn-warning" type="button" value="ویرایش" onclick="location.href='@Url.Action("RoleEdit", "Users", new { id = Model.Role_Id })'" />
                    </fieldset>
                    
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>

    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>دسترسی های اختصاص یافته به این نقش</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div id="PermissionsTable">
                    @Html.Partial("_ListPermissions", Model)
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>

</div>

<div class="row-fluid">
    
</div>
<br />
<div>
    @Html.ActionLink("مشاهده لیست نقش ها", "RoleIndex", "Users")
</div>
