@model cngfapco.Models.Role

<script src="~/js/admin/jquery-1.10.2.js"></script>
<script src="~/js/admin/jquery-common.js"></script>
<script src="~/js/admin/jquery-ui-1.10.3.custom.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        //$('#AddUser').attr("disabled", true);
        $('#AddUser').click(function () {
            var _userId = $('#UserId').val();
            var _id = $('#Role_Id').val();

            if (_userId == '') {
                return false;
            }

            var _parameters = { userId: _userId, id: _id };
            $.ajax({
                url: "/Users/AddUser2RoleReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#UsersTable').html(data);
                    $('#UserId').val("");
                }
            });
        });      
    });
</script>
@Html.HiddenFor(model => model.Role_Id)
<div>
   <strong>کاربر جدید</strong>
    
    @Html.DropDownList("UserId", null, string.Empty, new { style = "width:250px" })
    <input class="btn btn-success" type="button" id="AddUser" value="افزودن کاربر به نقش" />
</div>
