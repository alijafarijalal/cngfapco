@model cngfapco.Models.Role
@{
    ViewBag.Title = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    })
</script>
<!-- BEGIN PAGE HEADER-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN THEME CUSTOMIZER-->
        <div id="theme-change" class="hidden-phone">
            <i class="icon-cogs"></i>
            <span class="settings">
                <span class="text">Theme:</span>
                <span class="colors">
                    <span class="color-default" data-style="default"></span>
                    <span class="color-gray" data-style="gray"></span>
                    <span class="color-purple" data-style="purple"></span>
                    <span class="color-navy-blue" data-style="navy-blue"></span>
                </span>
            </span>
        </div>
        <!-- END THEME CUSTOMIZER-->
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
            </li>
            <li>
                <a href="/Users/RoleIndex"> نقش ها </a> <span class="divider">&nbsp;</span>
            </li>
            <li><a href="#">افزودن نقش </a><span class="divider-last">&nbsp;</span></li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>افزودن مشخصات کاربر جدید</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <fieldset>                            
                            <table style='width: 100%'>
                                <tr>
                                    <td style='width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.RoleName, "عنوان نقش")
                                    </td>
                                    <td style='width: 28%' class='userTable'>
                                        @Html.TextBoxFor(model => model.RoleName, new { style = "width:450px" })
                                        @Html.ValidationMessageFor(model => model.RoleName)
                                    </td>
                                    <td style='width: 8%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.IsSysAdmin, "نقش مدیر")
                                    <td style='width: 20%' class='userTable'>
                                        @Html.EditorFor(model => model.IsSysAdmin)
                                        @Html.ValidationMessageFor(model => model.IsSysAdmin)
                                    </td>
                                </tr>
                                <tr>
                                    <td style='width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.RoleDescription, "شرح نقش")
                                    </td>
                                    <td style='width: 28%' class='userTable'>
                                        @Html.TextBoxFor(model => model.RoleDescription, new { style = "width:450px" })
                                        @Html.ValidationMessageFor(model => model.RoleDescription)
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <input type="submit" value="افزودن نقش" />
                        </fieldset>
                    }
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>
</div>
