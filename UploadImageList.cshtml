    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Vendor styles -->
    <link rel="stylesheet" href="/vendors/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/vendors/animate.css/animate.min.css">
    <link rel="stylesheet" href="/vendors/jquery-scrollbar/jquery.scrollbar.css">
    <link rel="stylesheet" href="/vendors/lightgallery/css/lightgallery.min.css">

    <!-- App styles -->
    <link rel="stylesheet" href="/css/app.min.css">
</head>

<body class="" style="background-color:#ffffff;">
    <main class="main">
        <section class="content">
            <div class="content__inner">
                <div class="" dir="rtl">
                    <!-- BEGIN PAGE HEADER-->
                    <div class="row-fluid">
                        <div class="span12">

                            <ul class="breadcrumb">
                                <li>
                                    <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
                                </li>
                                <li>
                                    <a href="/VehicleRegistrations/DetailsSection3?id=@ViewBag.RegistrationID">جزئیات اطلاعات خودرو</a> <span class="divider">&nbsp;</span> | 
                                </li>
                                <li> <a href="#">مشاهده فایل های پیوست </a><span class="divider-last">&nbsp;</span></li>

                            </ul>
                        </div>
                    </div>
                    <!-- END PAGE HEADER-->
                </div>
                <!-- BEGIN SAMPLE FORM widget-->
                <div class="widget" dir="rtl">
                    <div class="widget-title">
                        <h4>
                            <i class="icon-reorder"></i>
                            <span>
                                مشاهده فایل های پیوست بارگذاری شده
                            </span>
                            @*<span class="text-center text-warning">
                     @(Model.FirstOrDefault().VehicleRegistration.OwnerName + " " + Model.FirstOrDefault().VehicleRegistration.OwnerFamily)
                    </span>*@
                        </h4>
                        <span class="tools">
                            <a href="javascript:;" class="icon-chevron-down"></a>
                            <a href="javascript:;" class="icon-remove"></a>
                        </span>
                        <div class="actions">
                            @try
                            {
                                <a href="/VehicleRegistrations/UploadImages?id=@RegistrationID" class="btn btn-success"><i class="icon-upload-alt"></i> افزودن/ جایگزینی فایل </a>
                            }
                            catch { }
                        </div>
                    </div>

                    <div class="widget-body">
                        @foreach (var item in Model.OrderByDescending(m => m.ID).Take(1))
                        {
                            <h3 style="text-align:center;font-size:17px;"> @(item.VehicleRegistration.OwnerName + " " + item.VehicleRegistration.OwnerFamily) </h3>
                        }
                    </div>

                </div>
                <!-- END SAMPLE FORM widget-->

                <div class="row lightbox photos">
                    @foreach (var item in Model.Where(m => m.Image != "NULL"))
                    {
                        <a href="~/UploadedFiles/Vehicle/@item.Folder/@item.Image.Trim()" class="col-md-2 col-4">
                            <div class="lightbox__item photos__item">
                                <img src="~/UploadedFiles/Vehicle/@item.Folder/@item.Image.Trim()" alt=".../@item.Folder/@item.Image.Trim()" />
                            </div>
                        </a>
                    }

                </div>
            </div>

        </section>
    </main>

