@model IEnumerable<cngfapco.Models.VehicleAttachment>

@{
    ViewBag.Title = "UploadImageList";
    Layout = null; //"~/Views/Shared/_Layout.cshtml";
    int? RegistrationID = (int?)ViewBag.RegistrationID;
}

<!DOCTYPE html>
<html lang="en">

