@model cngfapco.Models.Permission
    @{ 
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<script src="~/js/admin/jquery-1.10.2.js"></script>
<script src="~/js/admin/jquery-common.js"></script>
<script src="~/js/admin/jquery-ui-1.10.3.custom.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>

<!-- BEGIN PAGE HEADER-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN THEME CUSTOMIZER-->
        <div id="theme-change" class="hidden-phone">
            <i class="icon-cogs"></i>
            <span class="settings">
                <span class="text">Theme:</span>
                <span class="colors">
                    <span class="color-default" data-style="default"></span>
                    <span class="color-gray" data-style="gray"></span>
                    <span class="color-purple" data-style="purple"></span>
                    <span class="color-navy-blue" data-style="navy-blue"></span>
                </span>
            </span>
        </div>
        <!-- END THEME CUSTOMIZER-->
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
            </li>
            <li>
                <a href="/Users/PermissionIndex"> دسترسی صفحه ها </a> <span class="divider">&nbsp;</span>
            </li>
            <li><a href="#">ویرایش دسترسی </a><span class="divider-last">&nbsp;</span></li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="row-fluid">
    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>جزئیات دسترسی به صفحه ها</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                   
                    <fieldset>
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)

                            @Html.HiddenFor(model => model.Permission_Id)
                            <table style='width: 100%'>
                                <tr>
                                    <td style='width: 20%;font-weight: bold'>
                                        @Html.LabelFor(model => model.PermissionDescription, "عنوان لاتین")
                                    </td>
                                    <td>
                                        @Html.HiddenFor(model => model.PermissionDescription)
                                        @Html.DisplayFor(model => model.PermissionDescription, new { style = "width:75%" })
                                        @Html.ValidationMessageFor(model => model.PermissionDescription)
                                    </td>
                                </tr>
                                <tr>
                                    <td style='width: 20%;font-weight: bold'>
                                        @Html.LabelFor(model => model.PersianDescription, "عنوان فارسی")
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.PersianDescription, new { style = "width:75%" })
                                        @Html.ValidationMessageFor(model => model.PersianDescription)
                                    </td>
                                </tr>
                            </table>
                            <hr />
                            <input class="btn btn-warning" type="submit" value="ثبت تغییرات" />
                        }
                    </fieldset>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>

    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>نقش های اختصاص یافته به این دسترسی</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    <fieldset>
                        <div id="RolesTable">
                            @Html.Partial("_ListRolesTable4Permission", Model)
                        </div>
                    </fieldset>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>
    
</div>

<div>
    @Html.ActionLink("مشاهده لیست دسترسی ها", "PermissionIndex", "Users")
</div>
