@{ 
    ViewBag.Title = "Financial DetailsSection";
    Layout = "~/Views/Shared/_DataTableLayout.cshtml";
}
    <div class="row-fluid" dir="rtl">
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>جزئیات دستمزد تبدیل</h4>
                @*<span class="tools">
                    <a href="javascript:;" class="icon-chevron-up"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>*@
            </div>
            <div class="widget-body form">
                <div class="row-fluid">
                    @("کد کارگاه: " + ViewBag.workshop + " از تاریخ:  " + ViewBag.fromDate + " تا تاریخ: " + ViewBag.toDate)
                </div>
                @*style="display:none;"*@
                <div style="overflow:auto;">
                    <table class="table table-striped table-bordered table-hover table-advance" id="DivIdToPrint2">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نوع خودرو</th>
                                <th>تعداد تبدیل</th>
                                <th> مبلغ واحد </th>
                                <th> مبلغ کل </th>
                            </tr>
                        </thead>
                        @{ int rowNum = 0;}
                        <tbody>
                            @foreach (var item in ViewBag.TableOuts)
                            {
                                <tr>
                                    <td>@(rowNum += 1)</td>
                                    <td>@item.Type</td>
                                    <td>@item.Count</td>
                                    <td>@item.Price.ToString("#,##") </td>
                                    <td>@item.Salary.ToString("#,##")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2">  جمع کل </td>
                                <td>@ViewBag.sumCount</td>
                                <td>-</td>
                                <td>@ViewBag.sumSalary</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
