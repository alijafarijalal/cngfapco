@model cngfapco.Models.Role
    @{ 
        int? userId = (int?)ViewBag.userID;
    }

@using (Html.BeginForm("AddUserRole", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Hidden("userId", userId)

    <div class="control-group">
        <label class="control-label">انتخاب نقش</label>
        <div class="controls">
            @Html.DropDownList("Role_Id", null, "--بدون انتخاب--", htmlAttributes: new { @class = "form-control select2" })
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-success">تخصیص نقش</button>
    </div>
}

