                                <th>
                                    @Html.DisplayNameFor(model => model.OwnerName) و @Html.DisplayNameFor(model => model.OwnerFamily)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NationalCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MobileNumber)
                                </th>
                                <th>
                                    شماره پلاک
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EngineNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ChassisNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VIN)
                                </th>
                                <th>
                                    شماره بیمه نامه
                                </th>
                                <th> <i class="icon-cog"></i> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int rowNum = 0;
                            }
                            @foreach(var item in ViewBag.vehicleregistration)
                            {
                            <tr>
                                <td>@(rowNum += 1)</td>
                                <td>@item.RegistrationType</td>
                                <td>@item.WorkshopTitle</td>
                                <td>@item.CreateDate</td>
                                <td>@item.VehicleType</td>
                                <td>@item.CylinderBulk</td>
                                <td>@item.CylinderNumber</td>
                                <td>@item.ValveNumber</td>
                                <td>@item.TypeofUse</td>
                                <td>@item.FullName</td>
                                <td>@item.NationalCode</td>
                                <td>@item.MobileNumber</td>
                                <td>@item.Plate</td>
                                <td>@item.EngineNumber</td>
                                <td>@item.ChassisNumber</td>
                                <td>@item.VIN</td>
                                <td>@item.InsuranceNumber</td>
                                <td>
                                    <a href="/VehicleRegistrations/DetailsSection3?Type=@item.RegistrationTypeID&id=@item.ID"> <i class="icon-search icon-white"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>
</div>

