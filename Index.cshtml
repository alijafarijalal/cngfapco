                    <div class="space15"></div>
                    <table id="example" class="display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>
                                    نوع طرح
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Workshop.Title)
                                </th>

