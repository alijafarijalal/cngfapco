@model IEnumerable<cngfapco.Models.Payment>

@{
    ViewBag.Title = "FreeSaleInvoicePaied";
    Layout = "~/Views/Shared/_DataTableLayout.cshtml";
}
<!-- BEGIN PAGE HEADER-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
            </li>
            <li>
                <a href="/Financials/RequestFreeSaleList">لیست درخواست های خرید اقلام</a> <span class="divider">&nbsp;</span>
            </li>
            <li><a href="#"> جزئیات پرداخت </a><span class="divider-last">&nbsp;</span></li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="" style="overflow:auto;">
    <table class="table table-striped table-bordered table-hover table-advance" id="sample_editable_1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NationalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RefID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SaleReferenceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PreInvoiceCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NationalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @(item.Amount.ToString("#,##"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RefID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaleReferenceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreInvoiceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

