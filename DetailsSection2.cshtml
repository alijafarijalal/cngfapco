<div class="row-fluid">
    @if (Model.Status != true)
    {
        if (Goback == true)
        {
            @Html.Action("EditSection3", new { id = selectedId,icon = "icon-chevron-up", style = "display:none" })
        }
        if (Goback == false)
        {
            @Html.Action("CreateSection3", new { id = selectedId,icon = "icon-chevron-up", style = "display:none" })
        }
    }

