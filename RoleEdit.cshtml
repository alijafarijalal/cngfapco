@model cngfapco.Models.Role
@{
    ViewBag.Title = "Edit " + Model.RoleDescription + " Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/admin/jquery-1.10.2.js"></script>
<script src="~/js/admin/jquery-common.js"></script>
<script src="~/js/admin/jquery-ui-1.10.3.custom.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>

<!-- BEGIN PAGE HEADER-->
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN THEME CUSTOMIZER-->
        <div id="theme-change" class="hidden-phone">
            <i class="icon-cogs"></i>
            <span class="settings">
                <span class="text">Theme:</span>
                <span class="colors">
                    <span class="color-default" data-style="default"></span>
                    <span class="color-gray" data-style="gray"></span>
                    <span class="color-purple" data-style="purple"></span>
                    <span class="color-navy-blue" data-style="navy-blue"></span>
                </span>
            </span>
        </div>
        <!-- END THEME CUSTOMIZER-->
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="breadcrumb">
            <li>
                <a href="/Home/Index"><i class="icon-home"></i></a><span class="divider">&nbsp;</span>
            </li>
            <li>
                <a href="/Users/RoleIndex"> نقش ها </a> <span class="divider">&nbsp;</span>
            </li>
            <li><a href="#">ویرایش نقش </a><span class="divider-last">&nbsp;</span></li>

        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="row-fluid">
    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>ویرایش نقش</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Role_Id)
                        <fieldset>                            
                                <table style='width: 100%'>
                                    <tr>
                                        <td style='width: 120px;font-weight: bold'>
                                            @Html.LabelFor(model => model.RoleName, "عنوان نقش")
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.RoleName, new { @class = "singlelinetextinput" })
                                            @Html.ValidationMessageFor(model => model.RoleName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style='font-weight: bold'>
                                            @Html.LabelFor(model => model.RoleDescription, "شرح نقش", new { style = "vertical-align:top" })
                                        </td>
                                        <td>
                                            @Html.TextAreaFor(model => model.RoleDescription, new { @class = "multilinetextinput" })
                                            @Html.ValidationMessageFor(model => model.RoleDescription)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style='font-weight: bold'>
                                            @Html.LabelFor(model => model.IsSysAdmin, "نقش مدیر")
                                        </td>
                                        <td>
                                            @Html.EditorFor(model => model.IsSysAdmin)
                                            @Html.ValidationMessageFor(model => model.IsSysAdmin)
                                        </td>
                                    </tr>
                                </table>
                                <br />
                                <input class="btn btn-warning" type="submit" value="ثبت تغییرات" />
                        </fieldset>
                    }
                    
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>

    <div class="span6">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i>کاربران دارای این نقش</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    <div id="UsersTable">
                        @Html.Partial("_ListUsersTable4Role", Model)
                        <br />
                    </div>
                    <div>
                        @Html.Partial("_AddUserToUsersTable4Role", Model)
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("مشاهده لیست کاربران", "Index", "Users")
                    </div>                    

                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN SAMPLE FORM widget-->
        <div class="widget">
            <div class="widget-title">
                <h4><i class="icon-reorder"></i> دسترسی های اختصاص یافته به این نقش</h4>
                <span class="tools">
                    <a href="javascript:;" class="icon-chevron-down"></a>
                    <a href="javascript:;" class="icon-remove"></a>
                </span>
            </div>
            <div class="widget-body form">
                <!-- BEGIN FORM-->
                <div class="col-lg-12">
                    
                    <fieldset>
                        
                        <div id="PermissionsTable">
                            @Html.Partial("_ListPermissions", Model)
                            <br />
                        </div>
                        <div>
                            @Html.Partial("_AddPermission2PermissionsTable4Role", Model)
                        </div>
                        <br />
                        <div>
                            @Html.ActionLink("مشاهده لیست دسترسی ها", "PermissionIndex", "Users")
                        </div>
                    </fieldset>

                </div>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SAMPLE FORM widget-->
    </div>
</div>