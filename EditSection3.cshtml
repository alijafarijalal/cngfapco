@model cngfapco.Models.VehicleRegistration

@{
    ViewBag.Title = "EditSection3";
    Layout = null;
    System.Globalization.PersianCalendar pc = new System.Globalization.PersianCalendar();
    int? VehicleRegistrationID = (int?)ViewBag.selectedVehicleId;
}

<script src="~/js/admin/jquery-1.10.2.js"></script>

<div class="row-fluid">
    <div class="span12">
        <div class="widget">

            <form action="/VehicleRegistrations/EditSection3" method="post">
                @Html.Hidden("VehicleRegistrationID", VehicleRegistrationID)
                <div class="widget-body" style="font-family:Vazir;">

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.SerialSparkPreview) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="SerialSparkPreview" id="SerialSparkPreview" value="@Model.SerialSparkPreview"  style="text-transform: uppercase" />
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.SerialKey) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="SerialKey" id="SerialKey" value="@Model.SerialKey"  style="text-transform: uppercase" />
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.RefuelingLable) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="RefuelingLable" id="RefuelingLable" value="@Model.RefuelingLable"  style="text-transform: uppercase" />
                            </div>
                        </div>


                    </div>

                    <div class="space10"></div>
                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.SerialRefuelingValve) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="SerialRefuelingValve" id="SerialRefuelingValve" value="@Model.SerialRefuelingValve"  style="text-transform: uppercase" />
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.TrackingCode) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="TrackingCode" id="TrackingCode" value="@Model.TrackingCode" style="text-transform: uppercase" />
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.License) </label>
                            <div class="controls">
                                <input type="text" class="span12" name="License" id="License" value="@Model.License" style="text-transform: uppercase" />
                            </div>
                        </div>


                    </div>
                    <div class="space10"></div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.InstallationStatus) </label>
                            <div class="controls">
                                @if (Model.InstallationStatus == true)
                                {
                                    <input type="checkbox" name="InstallationStatus" id="InstallationStatus" value="true" checked>
                                }
                                @if (Model.InstallationStatus == false)
                                {
                                    <input type="checkbox" name="InstallationStatus" id="InstallationStatus" value="false" >
                                }

                            </div>
                        </div>

                        <div class="span8 Description">
                            <label class="control-label text-warning"> @Html.LabelFor(model => model.Description) </label>
                            <div class="controls">
                                <textarea type="text" class="span12" name="Description" id="Description"> @Model.Description </textarea>
                            </div>
                        </div>
                        
                    </div>
                    <div class="space10"></div>

                    <div class="row-fluid">
                        <input type="submit" value="ذخیره اطلاعات" class="text-success span12 btnSave" style="font-family:Vazir;" />
                    </div>

                </div>
                
            </form>

        </div>
    </div>
</div>


<script>
    function text(name) {
        var name = $(name).val();
        if (name.length > 0) {
            just_persian(name);
        }
    }

    //function just_persian(str) {
