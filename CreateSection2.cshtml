
@{
    ViewBag.Title = "CreateSection2";
    Layout =null;
    System.Globalization.PersianCalendar pc = new System.Globalization.PersianCalendar();
    int? cylindertypeId = (int?)ViewBag.cylindertypeId;
    int? VehicleRegistrationID = (int?)ViewBag.selectedVehicleId;
    string status = (string)ViewBag.status;
}

<script src="~/js/admin/jquery-1.10.2.js"></script>

<div class="row-fluid">
    <div class="span12">
        <div class="widget">

            <form action="/VehicleRegistrations/SaveSection2">
                @Html.Hidden("cylindertypeId", cylindertypeId)
                @Html.Hidden("VehicleRegistrationID", VehicleRegistrationID)
                <div class="widget-body" style="font-family:Vazir;">

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سریال مخزن  </label>
                            <div class="controls">
                                <input type="text" class="span12" name="Serial" id="Serial" placeholder="" style="text-transform: uppercase" required="required" />
                                <span id="CheckeSerialNumber" class="text-danger span12"></span>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> حجم مخزن </label>
                            <div class="controls">
                                <input type="text" class="span12" name="Bulk" id="Bulk" value="@ViewBag.cylinderBulk لیتری" />
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سازنده مخزن </label>
                            <div class="controls">
                                @Html.DropDownList("TankConstractorID", null, "", htmlAttributes: new { @class = "span12", @tabindex = "", required = "required", @style = "font-family:Vazir;" })
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> تاریخ تولید مخزن </label>
                            <div class="controls input-icon left">
                                <div class="span6">
                                    <select class="span12" data-placeholder="ماه" id="ProductMonth" style="" name="ProductMonth" required="required">
                                        <option value=""></option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <div class="span6">
                                    <select class="span12" data-placeholder="سال" id="ProductYear" style="" name="ProductYear" required="required">
                                        <option value=""></option>
                                        @for (int i = 2000; i <= DateTime.Now.Year; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> تاریخ انقضا مخزن </label>
                            <div class="controls input-icon left">
                                <div class="span6">
                                    <select class="span12" data-placeholder="ماه" id="ExpirationMonth" style="" name="ExpirationMonth" required="required">
                                        <option value=""></option>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <div class="span6">
                                    <select class="span12" data-placeholder="سال" id="ExpirationYear" style="" name="ExpirationYear" required="required">
                                        <option value=""></option>
                                        @for (int i = 2000; i <= (DateTime.Now.Year + 20); i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سریال شیر مخزن </label>
                            <div class="controls">
                                <input type="text" class="span12" name="SerialTankValve" id="SerialTankValve" style="text-transform: uppercase" required="required" />
                                <span id="CheckeSerialTankValve" class="text-danger span12"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> نوع شیر مخزن </label>
                            <div class="controls">
                                <select class="span12" data-placeholder="" id="TypeTankValve" name="TypeTankValve" required="required" style="font-family:Vazir;">
                                    <option value=""></option>
                                    <option value="دستی"> دستی </option>
                                    <option value="برقی"> برقی </option>
                                </select>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سازنده شیر مخزن </label>
                            <div class="controls">
                                @Html.DropDownList("ValveConstractorID", null, "", htmlAttributes: new { @class = "span12", @required = "required", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سریال کیت (رگلاتور) </label>
                            <div class="controls">
                                <span>
                                    <input type="text" class="span6" name="RegulatorSerial" id="RegulatorSerial" style="text-transform: uppercase" required="required" />
                                </span>
                                <span>
                                    <input type="text" class="span6" name="GenarationVal" id="GenarationVal" disabled="disabled" />
                                    <input type="hidden" name="Genaration" id="Genaration" required="required" />
                                </span>
                                <span id="CheckeRegulatorSerial" class="text-danger span12"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> <span class="help-inline text-danger text-l"> * </span> سازنده کیت (رگلاتور) </label>
                            <div class="controls">
                                @Html.DropDownList("RegulatorConstractorID", null, "", htmlAttributes: new { @class = "span12", @required = "required", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سریال شیر قطع کن </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                <input type="text" class="span12" name="CutofValveSerial" id="CutofValveSerial" style="text-transform: uppercase" required="required" />
                                <span id="CheckeCutofValveSerial" class="text-danger span12"></span>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سازنده شیر قطع کن </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                @Html.DropDownList("CutofValveConstractorID", null, "", htmlAttributes: new { @class = "span12", @required = "required", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> سریال شیر پر کن </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                <input type="text" class="span12" name="FillingValveSerial" id="FillingValveSerial" style="text-transform: uppercase" required="required" />
                                <span id="CheckeFillingValveSerial" class="text-danger span12"></span>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سازنده شیر پر کن </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                @Html.DropDownList("FillingValveConstractorID", null, "", htmlAttributes: new { @class = "span12", @required = "required", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سریال ریل سوخت </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                <input type="text" class="span12" name="FuelRelaySerial" id="FuelRelaySerial" style="text-transform: uppercase" />
                                <span id="CheckeFuelRelaySerial" class="text-danger span12"></span>
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">

                        <div class="span4">
                            <label class="control-label text-warning"> سازنده ریل سوخت </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                @Html.DropDownList("FuelRelayConstractorID", null, "", htmlAttributes: new { @class = "span12", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سریال Gas ECU </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                <input type="text" class="span12" name="GasECUSerial" id="GasECUSerial" style="text-transform: uppercase" />
                                <span id="CheckeGasECUSerial" class="text-danger span12"></span>
                            </div>
                        </div>

                        <div class="span4">
                            <label class="control-label text-warning"> سازنده Gas ECU </label> @*<span class="help-inline text-danger text-l"> * </span>*@
                            <div class="controls">
                                @Html.DropDownList("GasECUConstractorID", null, "", htmlAttributes: new { @class = "span12", @style = "font-family:Vazir;" })
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">
                        <input type="submit" value="ذخیره اطلاعات و رفتن به مرحله بعد --->" class="text-success span12 btnSave button-submit" style="font-family:Vazir;" @status />
                    </div>

                </div>

                <script>
                    $(document).ready(function () {
                        var cylindertypeId = $('#cylindertypeId');
                        var VehicleRegistrationID = $('#VehicleRegistrationID');
                        var Serial = $('#Serial');
                        var TankConstractorID = $('#TankConstractorID');
                        var ProductMonth = $('#ProductMonth');
                        var ProductYear = $('#ProductYear');
                        var ExpirationMonth = $('#ExpirationMonth');
                        var ExpirationYear = $('#ExpirationYear');
                        var SerialTankValve = $('#SerialTankValve');
                        var TypeTankValve = $('#TypeTankValve');
                        var ValveConstractorID = $('#ValveConstractorID');
                        var RegulatorSerial = $('#RegulatorSerial');
                        var RegulatorConstractorID = $('#RegulatorConstractorID');
                        var CutofValveConstractorID = $('#CutofValveConstractorID');
                        var CutofValveSerial = $('#CutofValveSerial');
                        var FillingValveConstractorID = $('#FillingValveConstractorID');
                        var FillingValveSerial = $('#FillingValveSerial');

                        var FuelRelayConstractorID = $('#FuelRelayConstractorID');
                        var FuelRelaySerial = $('#FuelRelaySerial');
                        var GasECUConstractorID = $('#GasECUConstractorID');
                        var GasECUSerial = $('#GasECUSerial');
                        var Genaration = $('#Genaration');

                        var successMessage = $('.success');
                        var error = $('.errors-container');
                        function validateForm() {
                            var required = [cylindertypeId, VehicleRegistrationID, Serial, TankConstractorID, ProductMonth, ProductYear, ExpirationMonth, ExpirationYear, SerialTankValve, TypeTankValve, ValveConstractorID, RegulatorSerial, RegulatorConstractorID, FuelRelayConstractorID, FuelRelaySerial, GasECUConstractorID, GasECUSerial, Genaration]; /*,CutofValveSerial,CutofValveConstractorID,FillingValveSerial,FillingValveConstractorID */
                            var containsErrors = false;

                            for (i = 0; i < required.length; i++) {
                                var input = required[i];
                                if ((input.val() == "")) {
                                    containsErrors = true;
                                    input.addClass('error-field');
                                    error.show();
                                } else {
                                    input.removeClass('error-field');
                                }
                            }
                            return !containsErrors;
                        }
                        $('.button-submit').click(function (e) {
                            var isValid = validateForm();
                            if (isValid) {
                                $(this).val('لطفا چند لحظه صبر کنید، درخواست شما در حال ذخیره سازی و انتقال به صفحه بعد می باشد');
                                $(this).attr("disabled", "disabled");
                                postForm();
                            }
                        });

                        function postForm() {
                            var formData = {
                                cylindertypeId: cylindertypeId.val(),
                                VehicleRegistrationID: VehicleRegistrationID.val(),
                                Serial: Serial.val(),
                                TankConstractorID: TankConstractorID.val(),
                                ProductMonth: ProductMonth.val(),
                                ProductYear: ProductYear.val(),
                                ExpirationMonth: ExpirationMonth.val(),
                                ExpirationYear: ExpirationYear.val(),
                                SerialTankValve: SerialTankValve.val(),
                                TypeTankValve: TypeTankValve.val(),
                                ValveConstractorID: ValveConstractorID.val(),
                                RegulatorSerial: RegulatorSerial.val(),
                                RegulatorConstractorID: RegulatorConstractorID.val(),
                                CutofValveSerial: CutofValveSerial.val(),
                                CutofValveConstractorID: CutofValveConstractorID.val(),
                                FillingValveSerial: FillingValveSerial.val(),
                                FillingValveConstractorID: FillingValveConstractorID.val(),
                                FuelRelayConstractorID: FuelRelayConstractorID.val(),
                                FuelRelaySerial: FuelRelaySerial.val(),
                                GasECUConstractorID: GasECUConstractorID.val(),
                                GasECUSerial: GasECUSerial.val(),
                                Genaration: Genaration.val()
                            };

                            $.ajax({
                                type: "POST",
                                url: "/VehicleRegistrations/SaveSection2",
                                data: formData,
                                dataType: "json",
                            }).done(function (response) {
                                if (response.response == "error") {
                                    alert("ثبت اطلاعات شما با مشکل مواجه شده است!");
                                    $('.button-submit').removeAttr("disabled", "disabled");
                                }
                                else if (response.response == "success") {
                                    // alert("اطلاعات خودرو با موفقیت ثبت شد، لطفا تا انتقال به مرحله بعد صبر نمایید" + response.redirectId);
                                    window.location = "/VehicleRegistrations/DetailsSection2?id=" + response.redirectId;
                                }
                            });
                        }
                    });
                </script>

                <script>
                                        $(function () {
                                            $('.button-next').hide();
                                            $('#Serial').keyup(function () {
                                                $.ajax({
                                                    type: 'POST',
                                                    url: '@Url.Action("CheckeSerialNumber")',
                                                    dataType: 'json',
                                                    data: { SerialNumber: $("#Serial").val() },
                                                    success: function (message) {
                                                        if (message == "true")
                                                        {
                                                            $('.button-next').show();
                                                            $("#CheckeSerialNumber").html("");
                                                        }
                                                        else
                                                        {
                                                            $("#CheckeSerialNumber").html(message);
                                                            $('.button-next').hide();
                                                        }
                                                        //alert(message);
                                                    }
                                                });

                                            }).keyup();

                                        });
                </script>

                <script>
                                        $(function () {
                                            $('.button-next').hide();
                                            $('#SerialTankValve').keyup(function () {
                                                $.ajax({
                                                    type: 'POST',
                                                    url: '@Url.Action("CheckeSerialTankValve")',
                                                    dataType: 'json',
                                                    data: { SerialTankValve: $("#SerialTankValve").val() },
                                                    success: function (message) {
                                                        if (message == "true")
                                                        {
                                                            $('.button-next').show();
                                                            $("#CheckeSerialTankValve").html("");
                                                        }
                                                        else
                                                        {
                                                            $("#CheckeSerialTankValve").html(message);
                                                            $('.button-next').hide();
                                                        }
                                                        //alert(message);
                                                    }
                                                });

                                            }).keyup();

                                        });
                </script>

                <script>
                                        $(function () {
                                            $('.button-next').hide();
                                            $('#RegulatorSerial').keyup(function () {
                                                $.ajax({
                                                    type: 'POST',
                                                    url: '@Url.Action("CheckeSerialRegulator")',
                                                    dataType: 'json',
                                                    data: { SerialRegulator: $("#RegulatorSerial").val() },
                                                    success: function (response) {
                                                        if (response.message == "true")
                                                        {
                                                            $('.button-next').show();
                                                            $("#CheckeRegulatorSerial").html("");
                                                        }
                                                        else
                                                        {
                                                            $("#CheckeRegulatorSerial").html(response.message);
                                                            $('.button-next').hide();
                                                        }
                                                        if (response.genaration != "false") {

                                                            $("#GenarationVal").val(response.genaration);
                                                            $("#Genaration").val(response.genaration);
                                                        }
                                                        //alert(message);
                                                    }
                                                });

                                            }).keyup();

                                        });
                </script>                

            </form>

        </div>
    </div>
</div>


