            alert("لطفا صفحه کلید خود را به لاتین تغییر دهید!");
        }
    });

    $('.PrsianKey').on('keypress', function (event) {
        var arregex = /^[\u0600-\u06FF\s]+$/;
        if (!arregex.test(event.key)) {
            $(this).val("");
            alert("لطفا صفحه کلید خود را به فارسی تغییر دهید!");
        }
    });
</script>