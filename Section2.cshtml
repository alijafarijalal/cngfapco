@model cngfapco.Models.VehicleTank
    @{ 
        string icon = (string)ViewBag.icon;
        string style = (string)ViewBag.style;
    }

<!-- BEGIN SAMPLE FORM widget-->
<div class="row-fluid">
    <div class="widget">
        <div class="widget-title">
            <h4><i class="icon-reorder"></i>مشاهده اطلاعات مخزن و متعلقات ثبت شده  (@Model.CreateDate)</h4>
            <span class="tools">
                <a href="javascript:;" class="@icon"></a>
                <a href="javascript:;" class="icon-remove"></a>
            </span>

        </div>

        <div class="widget-body form" style="@style">
            <!-- BEGIN FORM-->
            <div class="row-fluid">
                <div class="span12">
                    <div class="span6">
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.Serial)</span> :
                            <span> @Model.Serial</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.Volume)</span> :
                            <span> @ViewBag.Bulk</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.TankConstractor.Constractor)</span> :
                            @try
                            {<span> @Model.TankConstractor.Constractor</span>}
                        catch { }
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.ProductDate)</span> :
                            <span dir="rtl"> @Model.ProductDate</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.ExpirationDate)</span> :
                            <span dir="rtl"> @Model.ExpirationDate</span>
                        </p>

                    </div>
                    <div class="span6">

                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.SerialTankValve)</span> :
                            <span> @Model.SerialTankValve</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.TypeTankValve)</span> :
                            <span> @Model.TypeTankValve</span>
                        </p>

                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.ValveConstractor.Valve)</span> :
                            <span> @Model.ValveConstractor.Valve</span>
                        </p>

                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.RegulatorSerial)</span> :
                            <span> @Model.RegulatorSerial</span>
                        </p>

                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.RegulatorConstractor.Regulator)</span> :
                            @try
                            {
                                <span> @Model.RegulatorConstractor.Regulator</span>
                            }
                            catch
                            {
                                <span> - </span>
                            }

                        </p>

                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="span6">
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.CutofValveSerial)</span> :
                            <span> @Model.CutofValveSerial</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.CutofValveConstractors.CutofValve)</span> :
                            @try
                            {<span> @Model.CutofValveConstractors.CutofValve</span>}
                        catch { }
                        </p>
                    </div>
                    <div class="span6">
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.FillingValveSerial)</span> :
                            <span> @Model.FillingValveSerial</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.FillingValveConstractors.FillingValve)</span> :
                            @try
                            {<span> @Model.FillingValveConstractors.FillingValve</span>}
                        catch { }
                        </p>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <div class="span6">
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.FuelRelaySerial)</span> :
                            <span> @Model.FuelRelaySerial</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.FuelRelayConstractors.FuelRelay)</span> :
                            @try
                            {<span> @Model.FuelRelayConstractors.FuelRelay</span>}
                        catch { }
                        </p>
                    </div>
                    <div class="span6" dir="rtl">
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.GasECUSerial)</span> :
                            <span> @Model.GasECUSerial</span>
                        </p>
                        <p>
                            <span style="color:#808080;">@Html.DisplayNameFor(model => model.GasECUConstractors.GasECU)</span> :
                            @try
                            {<span> @Model.GasECUConstractors.GasECU </span>}
                        catch { }
                        </p>
                    </div>
                </div>
            </div>
            <!-- END FORM-->
        </div>

    </div>
</div>
<!-- END SAMPLE FORM widget-->